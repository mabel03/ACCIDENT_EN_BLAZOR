@page "/RegistrarInvolucrados"
@using AccidenteTransito.Model
@using Interfaces
@inject IInvolucradoService InvolucradoService
<h3>Registrar Involucrados</h3>
<br>
<br>
<EditForm Model="@registrar">
    <table class="table">
        <tr>
            <td>Nombre: </td>
            <td><input type="text" @bind="registrar.Nombre" /></td>
        </tr>
        <tr>
            <td>Apellido: </td>
            <td><input type="text" @bind="registrar.Apellido" /></td>
        </tr>
        <tr>
            <td>Telefono: </td>
            <td><input type="text" @bind="registrar.Telefono" /></td>
        </tr>
        <tr>
            <td>Correo: </td>
            <td><input type="text" @bind="registrar.Correo" /></td>
        </tr>
        <tr>
            <td>Cedula: </td>
            <td><input type="text" @bind="registrar.Cedula" /></td>
        </tr>
        <tr>
            <td>Caso Involucrado: </td>
            <td><input type="text" @bind="registrar.CasoInvolucrado" /></td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center">
                <input type="submit" value="Enviar" class="btn btn-success" @onclick="EnviarDatos" />
                <input type="submit" value="Cancelar" class="btn btn-danger" @onclick="Cancelar" />
            </td>
        </tr>
    </table>
</EditForm>

@code {
    Involucrado registrar = new Involucrado();

    protected void Cancelar()
    {

    }
    protected async Task EnviarDatos()
    {
        await InvolucradoService.Enviar(registrar);
    }
}
